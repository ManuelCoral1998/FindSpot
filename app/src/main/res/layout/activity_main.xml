<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linear_planta_fisica"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_planta_fisica"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:src="@drawable/mapa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="Ver planta fÃ­sica"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_filtros"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/linear_planta_fisica"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ajustes"
            android:id="@+id/iv_filtros"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="50dp" />

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Filtrar tus \n preferencias"
            android:textSize="25dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_escaner"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/linear_filtros"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/codigo_qr"
            android:id="@+id/iv_escaner"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="50dp" />

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Escanear mesa"
            android:textSize="25dp" />
    </LinearLayout>


</RelativeLayout>